  /*@Override*/
  public String toString() {
    String str = "min(";
    boolean nonEmpty = false;
    for (int i = 0; i < matrix.rows(); i++) {
      boolean nonEmptyRow = false;
      for (int j = 0; j < terms.length; j++) {
        if (matrix.get(i, j) == 0)
          continue;
        if (nonEmptyRow) {
          str += " + ";
        } else if (nonEmpty) {
          str += ", ";
        }
        nonEmptyRow = true;
        str += "(" + terms[j] + " * " + matrix.get(i, j) + ")";
      }
      if (nonEmptyRow)
        nonEmpty = true;
    }
    return str + ")@" + getStore().name();
  }


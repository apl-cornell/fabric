  }

  /**
   * Acquire the lock.
   */
  public void acquire() {
    TransactionManager tm = TransactionManager.getInstance();
    Logging.METRICS_LOGGER.log(Level.FINE, "ATTEMPTING ACQUIRE OF {0} IN {1}",
        new java.lang.Object native[] { this, tm.getCurrentTid() });
    if (!tm.hasLock(this)) {
      if (!currentlyHeld) {
        tm.registerLockAcquire(this);
        currentlyHeld = true;
